form.component-controls.oscillator-controls
	.amplitude-input
		label
			input(type="number", min="-1", max="1", step="0.01")
			| Amplitude
	.frequency-input
		label
			input(type="number", min="-24", max="24", step="0.01")
			| Frequency
	.offset-input
		label
			input(type="number", min="-24", max="24", step="0.01")
			| Offset
	.displays
		.output-display
			h3 Output Waveform
			svg.waveform
		.waveform-display
			h3 Oscillator Waveform
			//shows waveform for length of this pattern
			svg.waveform