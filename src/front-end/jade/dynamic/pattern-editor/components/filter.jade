.filter.component
	.remove-button
	.title
		| Filter

	// PORTS
	.inputs
		.line-input.input(data-connection-id="#{lineInputId}")
			.port
			| Line
		.level-input.input(data-connection-id="#{levelInputId}")
			.port
			| Level
	.outputs
		.output(data-connection-id="#{outputId}")
			.port
			| Output

	// Controls
	form.component-controls.filter-controls
		.type
			label
				input(type="radio", name="type", value="none") 
				| None
			label
				input(type="radio", name="type", value="scale")
				| Scale
			label
				input(type="radio", name="type", value="digital")
				| Digital
			label
				input(type="radio", name="type", value="saw")
				| Saw
		.scale-controls
			| scale controls
		.digital-controls
			| digital controls
		.saw-controls
			| saw controls

		.displays
			.output-display
				h3 Output Waveform
				svg.waveform