html
	head
		title #{meta.title}
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='viewport', content='#{meta.viewport}')
		link(rel='icon', type='image/png', href='#{meta.favicon}')
		link(rel='shortcut icon', sizes='16x16', href='favicon.png')
		link(rel='shortcut icon', sizes='120x120', href='#{meta.icons.shortcutIcon120x120}')
		link(rel='shortcut icon', sizes='200x200', href='#{meta.icons.shortcutIcon200x200}')
		meta(name='apple-mobile-web-app-capable', content='yes')
		meta(name='mobile-web-app-capable', content='yes')
		meta(name='apple-mobile-web-app-status-bar-style', content='default')
		link(rel='apple-touch-icon', href='#{meta.icons.appleTouchIcon}')
		meta(name='description', content='#{meta.description}')
		meta(name='keywords', content='#{meta.keywords}')
		meta(name='author', content='#{meta.author}')
		meta(name='copyright', content='#{meta.copyright}')
		meta(property='og:url', content='#{meta.og.url}')
		meta(property='og:title', content='#{meta.og.title}')
		meta(property='og:image', content='#{meta.og.image}')
		meta(property='og:image:type', content='image/png')
		meta(property='og:description', content='#{meta.og.description}')
		meta(property='twitter:title', content='#{meta.twitter.title}')
		meta(property='twitter:image', content='#{meta.twitter.image}')
		meta(property='twitter:description', content='V#{meta.twitter.description}')
		script.
			window.location.href = "#{meta.url}/#{request.params.id}/#{request.params.n}";
	body
		img(src="#{site.cdn}/#{post.img}")